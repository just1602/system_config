# custom functions

# No arguments: `git status`
# With arguments: acts like `git`
g ()
{
    if [[ $# -gt 0 ]]; then
      git "$@"
    else
      git st
    fi
}
compdef g=git

# No arguments: todo.sh list
# with arguments: acts like todo.sh
t ()
{
    if [[ $# -gt 0 ]]; then
      todo.sh "$@"
    else
      todo.sh ls
    fi
}
compdef t=todo.sh

mkcd() {
  mkdir -p "$1" && builtin cd "$1"
}
