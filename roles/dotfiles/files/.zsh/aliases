# zsh aliases

alias ap='ansible-playbook -i inventory'

alias ls='ls --color=auto'

alias tm='tmux'
alias ta='tmux a -t'
alias ts='tmux new -s'
alias tl='tmux ls'

alias v='nvim'
alias vimdiff='nvim -d'

alias p='python'

alias c='bat'
alias f='fd'

alias l='exa'
alias ll='l -l'

alias cr='cargo run'
alias cf='cargo-fmt'
alias ct='cargo test'

alias ip='ip --color=auto'

alias rb='ruby'
alias b='bundle exec'

alias diff='diff --color=always -u'
alias serve='python -m http.server'
alias feh='feh -F'

alias t='todo'
alias tn='todo new'
alias te='todo edit'

alias yl='youtube-dl'

if [[ "$OSTYPE" == linux* ]]; then
    alias xclip='xclip -selection c'
fi
