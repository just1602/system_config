[general]
status_path = "~/.vdirsyncer/status/"

[pair my_friends]
a = "my_friends_local"
b = "my_friends_remote"
collections = ["from a", "from b"]
conflict_resolution = "b wins"

[storage my_friends_local]
type = "filesystem"
path = "~/.friends"
fileext = ".vcf"

[storage my_friends_remote]
type = "carddav"
url = "https://cloud.disroot.org/remote.php/carddav/"
username = "just1602"
password.fetch = ["command", "pass", "disroot.org"]

[pair my_calendars]
a = "my_calendars_local"
b = "my_calendars_remote"
collections = ["from a", "from b"]
metadata = ["color"]

[storage my_calendars_local]
type = "filesystem"
path = "~/.calendars"
fileext = ".ics"

[storage my_calendars_remote]
type = "caldav"
url = "https://cloud.disroot.org/remote.php/caldav/"
